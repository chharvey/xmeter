{
  "name": "xmeter",
  "version": "3.2.0",
  "description": "A default stylesheet with a set of tools that make designing with vertical rhythm easy.",
  "main": "xmeter.css",
  "dependencies": {
    "normalize.css": "~3.0.3"
  },
  "devDependencies": {
    "clean-css": "^3.4.5",
    "jade": "^1.11.0",
    "less": "^2.5.3",
    "lessc-each": "^1.0.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lessc:reset": "lessc reset.less reset.css",
    "lessc:xmeter": "lessc-each ./src/ ./build/  ;  lessc xmeter.less xmeter.css",
    "lessc:all": "npm run lessc:reset  ;  npm run lessc:xmeter",
    "minify": "cleancss ./xmeter.css -o ./xmeter.min.css",
    "jade:all": "jade -P {test,test-forms}.jade",
    "build": "npm run lessc:all  ;  npm run minify  ;  npm run jade:all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chharvey/xmeter.git"
  },
  "keywords": [
    "css",
    "default",
    "stylesheet",
    "normalize",
    "vertical",
    "rhythm",
    "less"
  ],
  "author": "Chris Harvey <chrisharvey2pi@gmail.com> (https://chharvey.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chharvey/xmeter/issues"
  },
  "homepage": "https://github.com/chharvey/xmeter"
}
