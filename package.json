{
  "name": "xmeter",
  "version": "5.6.0",
  "description": "A default stylesheet with a set of tools that make designing with vertical rhythm easy.",
  "main": "xmeter.css",
  "dependencies": {},
  "devDependencies": {
    "clean-css": "^3.4.17",
    "less": "^2.7.1",
    "normalize.css": "^5.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "sitepage": "^1.0.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "pug:docs": "pug -O docs/_models/options.js docs/{index,base,obj,comp,help,atom}.jade",
    "pug:all": "npm run pug:docs",
    "lessc:docs": "lessc docs/styles/docs.less docs/styles/docs.css",
    "lessc:xmeter": "lessc xmeter.less xmeter.css",
    "lessc:all": "npm run lessc:docs  &&  npm run lessc:xmeter",
    "minify": "cleancss xmeter.css -o xmeter.min.css",
    "unbuild": "rm docs/{index,base,obj,help,atom}.html {docs/styles/docs,xmeter,xmeter.min}.css",
    "build": "npm run pug:all  &&  npm run lessc:all  &&  npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chharvey/xmeter.git"
  },
  "keywords": [
    "css",
    "default",
    "stylesheet",
    "normalize",
    "vertical rhythm",
    "less"
  ],
  "author": "Chris Harvey <chrisharvey2pi@gmail.com> (https://chharvey.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chharvey/xmeter/issues"
  },
  "homepage": "https://github.com/chharvey/xmeter#readme"
}
